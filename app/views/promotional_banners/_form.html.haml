-# frozen_string_literal: true
= simple_form_for(@promotional_banner) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.association :store
    = f.input :name
    = f.input :banner

  .form-actions
    = f.button :submit
