-# frozen_string_literal: true
= simple_form_for(@store) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :name
    = f.input :logo
    = f.input :background_image
    = f.input :description
    = f.input :valcher
    = f.input :url

  .form-actions
    = f.button :submit
